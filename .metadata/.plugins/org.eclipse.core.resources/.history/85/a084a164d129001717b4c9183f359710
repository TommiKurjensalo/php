<?php

$m = new Muokkaa();
$m->muokkaaAsiakas();

class Muokkaa {
	

public function muokkaaAsiakas() {

	$tulos = array();
	$table = 'lisaa';
	$data = ["lisaaId" => ":lisaaId","asiakkaanNimi" => ":asiakkaanNimi"];
	$where = 'lisaaId=:lisaaId';

	function build_sql_update($table, $data, $where)
	{
		$cols = array();
	
		foreach($data as $key=>$val) {
			$cols[] = "$key = '$val'";
		}
		$sql = "UPDATE $table SET " . implode(', ', $cols) . " WHERE $where";
	
		return $sql;
	}

	$sql_lisaa = $this->$Muokkaa->build_sql_update($table,$data,$where);
	//$sql_lisaa = Muokkaa::build_sql_update($table, $data, $where);
	var_dump($sql_lisaa);
}	
}
?>